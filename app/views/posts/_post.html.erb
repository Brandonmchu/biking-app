<% if post.kind_of?(Array) == true %>

  

  <% post.each do |single| %>
    <div class="card-container">
      <div class="card-image">
      <% if single.posted != nil %>
        <%= image_tag single.posted, :height => '384', :width => '384' %>
      <% else %>
        <% images = ["y-u-no-guy.jpg", "picard.jpg", "jackie.jpg"] %>
        <%= image_tag images.sample %>
      <% end %>
      </div>
      <div class="card-info">
        <div class="card-title">
          <%= link_to single.title, single.url, :target => '_blank' %>
        </div>
        <div class="card-stats">
          <% if single.price > 0 %>
            $<%= single.price %>0
          <% else %>
            Please Contact
          <% end %>
          <%= single.category %>
          <%= single.location %>
          <%= single.created_at.strftime("%b %d, %H:%M") %>
        </div>
      </div>
    </div>
  <% end %>

<% else %>

  <div class="card-container">
    <div class="card-image">
    <% if post.posted != nil %>
      <%= image_tag post.posted, :height => '384', :width => '384' %>
    <% else %>
      <% images = ["y-u-no-guy.jpg", "picard.jpg", "jackie.jpg"] %>
      <%= image_tag images.sample %>
    <% end %>
    </div>
    <div class="card-info">
      <div class="card-title">
        <%= link_to post.title, post.url, :target => '_blank' %>
      </div>
      <div class="card-stats">
        <% if post.price > 0 %>
          $<%= post.price %>0
        <% else %>
          Please Contact
        <% end %>
        <%= post.category %>
        <%= post.location %>
        <%= post.created_at.strftime("%b %d, %H:%M") %>
      </div>
    </div>
  </div>

<% end %>

